<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>Archetype Created Web Application</display-name>
  <context-param>
    <param-name>javax.faces.CONFIG_FILES</param-name>
    <param-value>/HBM/LoanType.hbm.xml</param-value>
  </context-param>

  <welcome-file-list>
  <welcome-file>index.html</welcome-file>
  <welcome-file>index.htm</welcome-file>
  <welcome-file>index.jsp</welcome-file>
  <welcome-file>default.html</welcome-file>
  <welcome-file>default.htm</welcome-file>
  <welcome-file>default.jsp</welcome-file>
</welcome-file-list>

<servlet>
  <servlet-name>NewRealCustomer</servlet-name>
  <servlet-class>Presentation.RealCustomer.AddNewRealCustomer</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>NewRealCustomer</servlet-name>
  <url-pattern>/AddNewRealCustomer</url-pattern>
</servlet-mapping>

  <servlet>
    <servlet-name>SearchRealCustomer</servlet-name>
    <servlet-class>Presentation.RealCustomer.SearchRealCustomerPresentation</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SearchRealCustomer</servlet-name>
    <url-pattern>/searchReal</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>EditRealCustomer</servlet-name>
    <servlet-class>Presentation.RealCustomer.EditRealCustomerPresentation</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditRealCustomer</servlet-name>
    <url-pattern>/editRealCustomer</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteRealCustomer</servlet-name>
    <servlet-class>Presentation.RealCustomer.DeleteRealCustomerPresentation</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteRealCustomer</servlet-name>
    <url-pattern>/deleteRealCustomer</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddLoanType</servlet-name>
    <servlet-class>Presentation.Loan.LoanTypePresentation</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddLoanType</servlet-name>
    <url-pattern>/AddNewLoanType</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RetrieveCustomer</servlet-name>
    <servlet-class>Presentation.Loan.LoanFilePresentation</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RetrieveCustomer</servlet-name>
    <url-pattern>/RetrieveCustomer</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>loadLoans</servlet-name>
    <servlet-class>Presentation.Loan.LoanTypePresentation</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loadLoans</servlet-name>
    <url-pattern>/loadLoans</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>createLoanFile</servlet-name>
    <servlet-class>Presentation.Loan.LoanFilePresentation</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>createLoanFile</servlet-name>
    <url-pattern>/createLoanFile</url-pattern>
  </servlet-mapping>
</web-app>